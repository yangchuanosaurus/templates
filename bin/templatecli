#!/usr/bin/env ruby

$LOAD_PATH.unshift File.dirname(__FILE__) + "/../lib"

require_relative '../lib/templatecli'

def usage
	puts "usage: templatescli init | use"
	puts "usage: templatescli publish"
	exit(1)
end

VERBS = ['init', 'use', 'publish']

if VERBS.include? ARGV.first
  @verb = ARGV.shift
else
  @verb = nil
end

usage unless !@verb.nil?

begin
	results = Template::Command.send(@verb, *ARGV)
	puts "\t#{results}"
rescue Exception => e
	puts e
	puts "invalidate args of `#{@verb}`"
ensure

end
